{
  "name": "things-stats",
  "version": "1.0.1",
  "description": "Showing you stats about your Things tasks.",
  "main": "src/index.js",
  "author": "Thomas Schoffelen <thomas@schof.co>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch src/* --exec 'electron .'",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --mac",
    "release": "build"
  },
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^20.39.0",
    "electron-notarize": "^0.2.1",
    "nodemon": "^1.18.11"
  },
  "dependencies": {
    "moment": "^2.24.0",
    "sqlite3": "^4.0.6"
  },
  "build": {
    "appId": "co.schof.things-stats",
    "productName": "Things Stats",
    "copyright": "Copyright Â© 2020 Thomas Schoffelen",
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "zip"
      ],
      "publish": [
        "github"
      ],
      "identity": "Apple Distribution: Thomas Schoffelen (AGKMBZTN3K)",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "entitlementsInherit": "./build/entitlements.mac.inherit.plist"
    }
  }
}
